.search-item {
  display: flex;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 1px solid #eee;
}

.search-item .order {
  width: 50rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
}

.search-item .content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.search-item .content .name {
  font-size: 28rpx;
  color: #333333;
}

.search-item .content .author {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.search-item .content .author .image {
  width: 38rpx;
  height: 22rpx;
  margin-right: 12rpx;
}

.search-item .content .author .text {
  color: #666666;
  font-size: 24rpx;
}