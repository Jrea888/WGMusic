page {
  padding: 0 20rpx;
  padding-top: 56px;
}

.search-page .title {
  font-size: 32rpx;
  color: #26ce8a;
  margin-bottom: 12rpx;
}

.search {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  top: 0;
}

.search .van-search {
  padding: 10px 0 !important;
}

.search .van-search__content {
  background-color: #fff;
}

/* 热门搜索 */
.hot .list {
  display: flex;
  flex-wrap: wrap;
}

.hot .list .item-tag {
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: #333333;
  border-radius: 12rpx;
  background-color: #fff;
}

.hot .list .item-tag:first-of-type {
  color: #26ce8a;
}

.suggest .list .item {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.suggest .list .item .text {
  font-size: 28rpx;
  color: #333333;
}

.suggest .list .item .icon {
  width: 66rpx;
}
